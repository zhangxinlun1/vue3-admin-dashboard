{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "vueCompilerOptions": {
      "experimentalDisableTemplateSupport": true,
      "tsClassDeclaration": true,
      "generateDeclarations": true
    },
    "types": ["element-plus/global","vue","node"],
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "lib": ["es2015","dom"],
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "eschewModuleAugmentation": true
    // 其他配置项
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.ts","src/**/**/*.vue",
    "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}